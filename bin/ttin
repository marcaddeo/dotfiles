#!/bin/bash
T="python $HOME/dotfiles/script/t --task-dir ~/dotfiles/tasks --list tasks"
PASS_ARGS="$@"

function refresh_and_push {
    if [[ -n "$TMUX" ]]; then
        tmux refresh-client -S
    fi

    if [[ ! -z $(cd $HOME/dotfiles; git diff --name-only timetrap/) ]]; then
        pushd . >/dev/null
        cd $HOME/dotfiles

        if [[ ! -z $(cd $HOME/dotfiles; git diff --name-only | grep -v timetrap/) ]]; then
            echo "Cowardly refusing to auto-commit time sheets because the repository is dirty!"
        else
            echo "Pushing to Github..."
            git checkout master >/dev/null 2>&1
            git add timetrap >/dev/null 2>&1
            git commit -m "Update time sheets" >/dev/null 2>&1
            git push origin master >/dev/null 2>&1
        fi

        popd >/dev/null
    fi
}
trap refresh_and_push EXIT

ID=$($T | fzf-tmux -d40% --ansi | perl -pe 's~^#\d+\s+- (.*?)\s+-.*~\1~')
NOTE=$($T -P | grep "^$ID\s\+- " | sed -e "s/^$ID[[:space:]]*- \(.*\)/\1/")

if [[ ! -z $NOTE ]]; then
    timetrap in "$NOTE" "$PASS_ARGS"
fi
